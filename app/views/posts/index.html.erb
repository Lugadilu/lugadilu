<section class="bg-white">
    <div class="section-container">
        <div class="space-y-6">
            <h1 class="text-2xl font-bold xl:text-4xl ">My posts</h1>
            <div class="grid xl:grid-cols-3 gap-9">

                <% @posts.each do |post| %>
                    <%= link_to post_path(post), class: "block" do %>
                        <div>
                            <%= image_tag post.image_link, class: "h-56 xl:h-96 w-full object-cover" %>
                            <h1 class="text-xl font-bold xl:text-2xl space-y-9"><%= post.title %></h1>
                        </div>
                    <%end%>
                <%end%>
            
            </div>
        </div> 
    </div>
</section>