<tr>
    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium sm:pl-6 lg:pl-8">
        <div class="flex items-center space-x-3">
        <%= image_tag project.image_link, class: "h-10 w-10 object-cover rounded" %>
        <span><%= project.title %></span>

        </div>
    </td>
    <td class="whitespace-nowrap px-3 py-4 text-sm">
    <span class="rounded-full px-2 <%= project.published ? 'text-primary' : 'text-secondary' %>"><%= project.published ?  '&check;'.html_safe : '&times;'.html_safe %></span>
    </td>
    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 lg:pr-8">
        <div class="text-sm flex items-center space-x-3">
            <%= link_to dashboard_project_path(project), class: "text-secondary hover:text-secondary/80" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
            <% end %>
            <%= link_to "Edit", edit_dashboard_project_path(project), class: "text-indigo-600 hover:text-indigo-900" %>
            <%= button_to dashboard_project_path(project), method: 'delete' , class: "text-red-600 hover:text-red-900" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                </svg>
            <% end %>
        </div>
    </td>
</tr>