<section class="bg-gray-200">
  <div class="default-container py-16">
    <div class="flex justify-center">
      <header class="text-center">
        <h2 class="text-lg sm:text-2xl font-bold">Sign up</h2>

        <div class="max-w-md bg-white-border p-6 mt-3">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="grid gap-3">
          <div class="grid gap-1">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email address"  %>
          </div>
          
        </div>

        <div class="grid gap-1">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
        </div>

        <div class="grid gap-1">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
        </div>
      </header>
    </div>
  </div>
</section>